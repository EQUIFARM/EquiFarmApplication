<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Toolbar with centered title and menu/notification icons -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        android:background="#800000"

        android:padding="5dp">

        <!-- Menu Icon on the farthest left -->
        <TextView
            android:id="@+id/menuIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="10dp"
            android:text="â˜°"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Title 'EquiFarm' centered -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="EquiFarm"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Notification Bell Icon on the farthest right -->
        <TextView
            android:id="@+id/notificationBell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="Notification bell"
            android:padding="8dp"
            android:text="ðŸ””"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <!-- GridLayout for the 3x3 cards -->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:alignmentMode="alignMargins"
            app:columnCount="3"
            app:rowCount="3">

            <!-- Card View 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/insurance"
                android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card View 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:strokeWidth="4dp"
                app:strokeColor="@android:color/darker_gray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/produce"
                android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Produce"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card View 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@android:color/darker_gray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/myfarm"
                android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Farm"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card View 4 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@android:color/darker_gray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/training"
                android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Training"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card View 5 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@android:color/darker_gray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/transport"
                android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transport"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card View 6 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@android:color/darker_gray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/support"
                android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extension"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card View 7 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@android:color/darker_gray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/farm_inputs"
                android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farm Tech"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card View 8 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@android:color/darker_gray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/farm_inputs"
                android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Card View 9 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                app:cardCornerRadius="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@android:color/darker_gray">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/farm_tech"
                android:scaleType="centerCrop" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farm Inputs"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/training" />


</LinearLayout>
