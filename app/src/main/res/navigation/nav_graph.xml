<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/CartFragment"
        android:name="com.example.equifarmapplication.presentation.views.fragments.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cartFragment_to_homeFragment"
            app:destination="@id/HomeFragment" />
        <action
            android:id="@+id/action_CartFragment_to_profileFragment"
            app:destination="@id/ProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.equifarmapplication.presentation.views.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/OrdersFragment"
        android:name="com.example.equifarmapplication.presentation.views.fragments.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders" >
        <action
            android:id="@+id/action_ordersFragment_to_cartFragment"
            app:destination="@id/CartFragment" />
        <action
            android:id="@+id/action_ordersFragment_to_homeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/FavoritesFragment"
        android:name="com.example.equifarmapplication.presentation.views.fragments.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" />
    <fragment
        android:id="@+id/ProfileFragment"
        android:name="com.example.equifarmapplication.presentation.views.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_OrdersFragment"
            app:destination="@id/OrdersFragment" />
    </fragment>
    <fragment
        android:id="@+id/MarketFragment"
        android:name="com.example.equifarmapplication.presentation.views.fragments.MarketFragment"
        android:label="fragment_market"
        tools:layout="@layout/fragment_market" >
        <action
            android:id="@+id/action_marketFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
</navigation>